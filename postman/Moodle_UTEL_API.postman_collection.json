{
  "info": {
    "name": "Moodle UTEL API",
    "description": "Colección de endpoints de Moodle Web Services para UTEL",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "moodle_url",
      "value": "https://av141.utel.edu.mx/webservice/rest/server.php",
      "type": "string"
    },
		{
			"key": "token",
			"value": "e16e271b2e37da5ade1e439f3314069c",
			"type": "string"
