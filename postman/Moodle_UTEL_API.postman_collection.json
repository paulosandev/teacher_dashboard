    {
      "name": "Información del Sistema",
      "item": [
        {
          "name": "Obtener Info del Sitio",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{moodle_url}}?wstoken={{token}}&wsfunction=core_webservice_get_site_info&moodlewsrestformat=json",
              "host": ["{{moodle_url}}"],
              "query": [
                {
                  "key": "wstoken",
                  "value": "{{token}}"
                },
                {
                  "key": "wsfunction",
                  "value": "core_webservice_get_site_info"
                },
                {
                  "key": "moodlewsrestformat",
                  "value": "json"
                }
              ]
            },
            "description": "Obtiene información general del sitio Moodle y del usuario del token"
          }
        }
      ]
    },
